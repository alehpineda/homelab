# ==================================
# HOMELAB INFRASTRUCTURE CONFIGURATION
# ==================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ----------------------------------
# API Keys & Authentication
# ----------------------------------
OPENROUTER_API_KEY=your-openrouter-api-key-here
HUB_PAT_TOKEN=your-hub-pat-token-here
HUB_PAT_TOKEN_READ_ONLY=your-readonly-token-here

# ----------------------------------
# Docker Volume Paths
# ----------------------------------
# Local development example: /home/username/Documents/07_Containers/00_docker/volumes
# Staging/Production example: /opt/docker/volumes or /srv/docker/volumes
DOCKER_VOLUMES_PATH=/path/to/docker/volumes

# ----------------------------------
# Portainer Configuration
# ----------------------------------
PORTAINER_HTTP_PORT=9000
PORTAINER_HTTPS_PORT=9443

# ----------------------------------
# Global Settings
# ----------------------------------
# Timezone (e.g., UTC, America/New_York, Europe/London, Asia/Tokyo, America/Mexico_City)
TZ=America/Mexico_City

# ----------------------------------
# Arr-Stack Configuration (Gluetun + qBittorrent)
# ----------------------------------
# VPN Configuration
VPN_SERVICE_PROVIDER=nordvpn
VPN_TYPE=wireguard
# Get your private key from: https://github.com/qdm12/gluetun-wiki/blob/main/setup/providers/nordvpn.md#obtain-your-wireguard-private-key
WIREGUARD_PRIVATE_KEY=your-wireguard-private-key-here
WIREGUARD_ADDRESSES=10.5.0.2/32
SERVER_COUNTRIES=Mexico
SERVER_CATEGORIES=P2P
# Server list update frequency
# Local/Testing: 1h (fast updates for testing)
# Staging/Production: 24h (efficient, recommended)
UPDATER_PERIOD=24h

# DNS Settings (for leak protection)
DOT=on
DOT_PROVIDERS=cloudflare
DNS_ADDRESS=127.0.0.1

# qBittorrent Configuration
QBITTORRENT_WEBUI_PORT=8085
PUID=1000
PGID=1000

# Ports
GLUETUN_BITTORRENT_PORT=6881
QBITTORRENT_PORT=8085

# ----------------------------------
# *arr Stack Services
# ----------------------------------
# Indexer Management & Media Automation

# Prowlarr (Indexer Manager)
PROWLARR_PORT=9696

# Sonarr (TV Shows)
SONARR_PORT=8989

# Radarr (Movies)
RADARR_PORT=7878

# Lidarr (Music)
LIDARR_PORT=8686

# Bazarr (Subtitles)
BAZARR_PORT=6767

# Jackett (Indexer Proxy - alternative to Prowlarr)
JACKETT_PORT=9117
JACKETT_AUTO_UPDATE=true

# FlareSolverr (Cloudflare bypass proxy for Prowlarr/Jackett)
FLARESOLVERR_PORT=8191
LOG_LEVEL=info
LOG_HTML=false
CAPTCHA_SOLVER=none

# Jellyseerr (Media Request & Discovery Manager)
JELLYSEERR_PORT=5055
JELLYSEERR_LOG_LEVEL=info
