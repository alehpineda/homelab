# Docker Volume Paths
DOCKER_VOLUMES_PATH="/path/to/docker/volumes"

# Portainer Configuration
PORTAINER_HTTP_PORT=9000
PORTAINER_HTTPS_PORT=9443
TZ=UTC

# Arr-Stack Configuration (Gluetun + qBittorrent)
# Gluetun VPN
VPN_SERVICE_PROVIDER=nordvpn
VPN_TYPE=wireguard
WIREGUARD_PRIVATE_KEY="your_wireguard_private_key_here"
WIREGUARD_ADDRESSES="10.5.0.2/32"
SERVER_COUNTRIES="Mexico"
SERVER_CATEGORIES="P2P"
UPDATER_PERIOD="24h"

# DNS Settings (for leak protection)
DOT=off
DOT_PROVIDERS=cloudflare
DNS_ADDRESS=127.0.0.1

# qBittorrent
QBITTORRENT_WEBUI_PORT=8085
PUID=1000
PGID=1000

# qBittorrent Bandwidth Limits (1/10th of 2 Gbps = 200 Mbps = 25 MB/s)
# Values in KiB/s (25 MB/s = 25000 KiB/s)
QBITTORRENT_BT_MAX_RATIO=-1
QBITTORRENT_BT_STOP_CONDITION=None

# Ports
GLUETUN_BITTORRENT_PORT=6881
QBITTORRENT_PORT=8085

# *arr Stack Ports
PROWLARR_PORT=9696
SONARR_PORT=8989
RADARR_PORT=7878
LIDARR_PORT=8686
BAZARR_PORT=6767
JACKETT_PORT=9117

# FlareSolverr Settings
FLARESOLVERR_PORT=8191
LOG_LEVEL=info
LOG_HTML=false
CAPTCHA_SOLVER=none

# Jellyseerr Settings
JELLYSEERR_PORT=5055
JELLYSEERR_LOG_LEVEL=info

# Jackett Settings
JACKETT_AUTO_UPDATE=true

# Pinchflat Settings
PINCHFLAT_PORT=8945

# Media Player Settings
# Jellyfin
JELLYFIN_PORT=8096
JELLYFIN_HTTPS_PORT=8920
JELLYFIN_DLNA_PORT=1900
JELLYFIN_DISCOVERY_PORT=7359

# Plex
# Note: Plex uses network_mode: host, so it uses default ports (32400 for web)
# Get your claim token from https://www.plex.tv/claim/ (valid for 4 minutes)
PLEX_CLAIM=
